<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="gestioneeventipu">
        <!-- La persistence-unit rappresenta praticamente la connessione al db, quindi la chiamerò sempre con il nome del db al quale-->
        <!-- sto cercando di connettermi ("gestioneeventi" in questo caso che è il nome del db che ho creato) + "pu" finale che sarebbe -->
        <!-- l'abbreviazione di persistence-unit -->

        <!-- Il nome della Persistence Unit è importante perché nel codice Java dovremo richiamarla per nome-->


        <!-- TODO: Aggiungi elenco delle entities -->
        <!-- Ogni volta che creo una nuova Entity la devo mettere qui in un tag <class> </class>-->
        <class>filippotimo.entities.Evento</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gestioneeventi"/>
            <!--  gestioneeventi è il nome del DB (se questo non è già stato creato in PgAdmin avrò un errore-->
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1234"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!--  Quest'ultima impostazione servirà per far creare/aggiornare le tabelle in automatico all'avvio dell'applicazione-->
        </properties>
    </persistence-unit>

</persistence>
